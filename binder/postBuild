# to install bash kernel
python -m bash_kernel.install
go get github.com/ericchiang/pup
go get -u github.com/tomnomnom/gron
# to create a folder for node installation
mkdir -p ~/.local/bin
npm install mapshaper --prefix ~/.local/bin
cd ~/.local/bin
# to let mapshaper and pup be available in the PATH ("~/.local/bin" is in the PATH)
ln -s ~/.local/bin/node_modules/mapshaper/bin/mapshaper mapshaper
ln -s ~/go/bin/pup pup
# updatedb --output ~/.locate.db
# alias mylocate="locate --database=$HOME/.locate.db"
curl -sL "https://github.com/sharkdp/fd/releases/download/v7.0.0/fd-musl_7.0.0_amd64.deb" >./fd-musl_7.0.0_amd64.deb
dpkg -i ./fd-musl_7.0.0_amd64.deb
